@model DoAnPTTKHDT.Models.CHUDE

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <section class="content">
        <div class="container">
            <h2 style="text-align:center;">THÊM MỚI CHỦ ĐỀ</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                  
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                       <p>
                        Tên chủ đề
                           </p>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm" class="btn btn-success" />
                            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-success" })
                        </div>
                        </div>
                    </div>
            }
                </div>

     
    </section>
</div>

