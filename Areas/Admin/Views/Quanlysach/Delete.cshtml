@model DoAnPTTKHDT.Models.SACH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container">
            <h2 style="text-align:center;">Bạn muốn xóa sách này?</h2>
            <div>

                <hr />
                <dl>
                <dt>
                    Tên sách:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TenSach)
                </dd>
                <dt>
                    Mô tả:
                </dt>
                <dd>
                    @Html.Raw(@Model.MoTa.ToString().Replace("\n", "</p><p>"))
                </dd>
                <dt>
                    Ảnh bìa:
                </dt>
                <dd>
                    <img src="~/Content/Images/@Model.HinhMinhHoa" alt=" @Model.TenSach">
                </dd>
                <dt>
                    Ngày cập nhật:
                </dt>
                <dd>
                    @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}")
                </dd>
                <dt>
                    Số lượng bán:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SoLuongBan)

                </dd>
                <dt>
                    Giá bán:
                </dt>
                <dd>
                    @Html.FormatValue(@Model.DonGia, "{0:#,##0}") VNĐ
                </dd>
                <dt>
                    Chủ đề:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CHUDE.TenChuDe)
                </dd>
                <dt>
                    Nhà xuất bản:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NHAXUATBAN.TenNXB)
                </dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" /> 
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-success" })
            </div>
                }
            </div>
        </div>
    </section>
</div>