@model IEnumerable<DoAnPTTKHDT.Models.CTDATHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container">
            <h2 style="text-align:center;">CHI TIẾT ĐƠN HÀNG</h2>
            <table class="table">
                <tr>
                    <th>
                        Số lượng
                    </th>
                    <th>
                       Đơn giá
                    </th>
                    <th>
                       Thành tiền
                    </th>
                    <th>
                     Tên khách hàng
                    </th>
                    <th>
                      Tên sách
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoLuong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonGia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThanhTien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DONDATHANG.TenNguoiNhan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SACH.TenSach)
                        </td>
                        <td>
                          
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>
</div>